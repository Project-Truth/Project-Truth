{
    "manifest_version": 2,
    "name": "TruthTortoise",
    "version": "0.1",
    "description": "We bring the truth to YOU",
    
    //runs in background when extension is up
    "background":{
        "scripts":["background.js"],
        //repeatedly check or no
        "persistent": false
    },
    //gives permission to.... (chrome apis)
    "permissions":["activeTab", "storage", "declarativeContent"],
    
   "browser_action":{
       "default_popup": "popup.html",
       "default_icon": {                    
          "32": "32.png"            
        },
        "default_title": "Project-Truth" 
   },
    //creates an options page in brower extensions
    "options_page": "options.html",
    
    //matt shit
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"]
      }
    ],"background": {
      "scripts": ["background.js"]
    }
    
  }