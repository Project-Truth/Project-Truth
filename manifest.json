{
    "manifest_version": 2,
    "name": "TruthTortoise",
    "version": "0.1",
    "description": "We bring the truth to YOU",
    
    
    "background":{
        "scripts":["background.js"],
        "run_at":"document_start"
    },
    
    "permissions":["tabs","activeTab", "storage", "declarativeContent"],
    
   "browser_action":{
       "default_popup": "popup.html",
       "default_icon": {                    
          "32": "32.png"            
        },
        "default_title": "Truth Tortoise" 
   },
    
    "options_page": "options.html",
    
    
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"],
        "run_at":    "document_start"
      }
    ]
    
  }